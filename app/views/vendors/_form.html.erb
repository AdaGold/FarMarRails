
<div class="form">
<%= form_for @vendor, url: action_name do |f| %> <%# could have - method: @method - before url to specify the method PUT via a variable created in controller%>

  <div class="field">
    <%= f.label "Name" %> <!-- title is the name of the instance varaible to name this with -->
    <%= f.text_field :name, "Name" => nil, :required => true %>
  </div>

  <div class="field">
    <%= f.label :no_employees %>
    <%= f.number_field :no_employees, :no_employees => nil, :required => true   %>
  </div>


  <%= f.submit action_name, class: 'submit_btn' %>
<% end %>
</div>
