<h1> Form Helper </h1>

<div class="form">
<%= form_for @market, url: action_name do |f| %> <%# could have - method: @method - before url to specify the method PUT via a variable created in controller%>

  <div class="field">
    <%= f.label "Name" %> <!-- title is the name of the instance varaible to name this with -->
    <%= f.text_field :name, "Name" => nil, :required => true %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, :address => nil, :required => true  %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, :city => nil, :required => true   %>
  </div>

  <div class="field">
    <%= f.label :county %>
    <%= f.text_field :county, :county => nil, :required => true   %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state, :state => nil, :required => true   %>
  </div>

  <div class="field">
    <%= f.label :zip %>
    <%= f.number_field :zip, :zip => nil, :required => true   %>
  </div>


  <%= f.submit action_name, class: 'submit_btn' %>
<% end %>
</div>
